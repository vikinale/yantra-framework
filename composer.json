{
  "name": "yantra/framework",
  "version": "0.1.0",
  "description": "Yantra - core PHP framework (routing, HTTP, hooks, database utilities)",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "ext-fileinfo": "*",
    "psr/log": "^1.1 || ^3.0",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1",
    "laminas/laminas-httphandlerrunner": "^2.13"
  },
  "require-dev": {
    "phpunit/phpunit": "*"
  },
  "autoload": {
    "psr-4": {
      "System\\": "src/System/",
      "Core\\": "src/Core/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Yantra\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
